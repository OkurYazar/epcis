@{
    ViewBag.Title = Resources.Label_Events;
}

<div class="row">
    <h3>@Resources.Label_Events</h3>
    <div class="col m12">
        <div class="card">
            <div class="card-content">
                <h5>@Resources.Label_LatestEvents</h5>
                <div id="eventsTable"></div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#eventsTable").html(loadingBar);
        $("#eventsTable").load("@Url.Content("~/Events/Read_LatestEvents")");
    })
</script>