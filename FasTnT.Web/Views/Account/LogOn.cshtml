@model FasTnT.Web.Models.Account.AuthenticationModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>@Resources.ApplicationName</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="icon" href="~/Content/images/Logo.ico" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/materialize")

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
    <body>
        <div class="section"></div>
        <main>
            <center>
                <img alt="@Resources.ApplicationName" title="@Resources.ApplicationName" style="width:300px" src="data:image/svg+xml;base64," />
                <h3>@Resources.EpcisRepository</h3>
                <div class="section"></div>

                <div class="container">
                    <div class="z-depth-1 grey lighten-4 row" style="width:400px; display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">

                        <form class="col s12" method="post" action="@Url.Content("~/Account/LogOn")">
                            @Html.AntiForgeryToken()
                            <div class='row'>
                                <div class='col s12'>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(Model.AuthenticationError))
                            {

                                <div class='row'>
                                    <div class='col s12 red-text'>
                                        @Html.LocalizeLabel(Model.AuthenticationError)
                                    </div>
                                </div>
                            }

                            <div class='row'>
                                <div class='input-field col s12'>
                                    @Html.TextBoxFor(x => x.UserName, new { id = "email", type = "email", name = "email", @class="validate" })
                                    <label for='email'>@Resources.Label_EnterYourEmail</label>
                                </div>
                            </div>

                            <div class='row'>
                                <div class='input-field col s12'>
                                    @Html.PasswordFor(x => x.Password, new { id = "password", name = "password", @class = "validate" })
                                    <label for='password'>@Resources.Label_EnterYourPassword</label>
                                </div>
                            </div>

                            <br />
                            <center>
                                <div class='row'>
                                    <button type='submit' name='btn_login' class='col s12 btn btn-large waves-effect indigo'>@Resources.Label_Login</button>
                                </div>
                                <div class="row">
                                    <ul id="language-selection" class="dropdown-content">
                                        <li><a href="~/Account/SetLanguage?language=en&redirectTo=@Request.Url.AbsolutePath">EN</a></li>
                                        <li><a href="~/Account/SetLanguage?language=fr&redirectTo=@Request.Url.AbsolutePath">FR</a></li>
                                    </ul>
                                    <button class="dropdown-button col s12 btn" href="#!" data-activates="language-selection">@Resources.Menu_Language<i class="material-icons right">arrow_drop_down</i></button>
                                </div>
                            </center>
                        </form>
                    </div>
                </div>
            </center>
            <div class="section"></div>
            <div class="section"></div>
        </main>
        <footer class="page-footer center-align">
            <div class="footer-copyright">
                <div class="container">@Resources.ApplicationName v@(Html.AssemblyVersion(2)) - @string.Format(Resources.Format_Copyright, @DateTime.Now.Year)</div>
            </div>
        </footer>
        <script type="text/javascript">
            $(document).ready(function () {
                $(".dropdown-button").dropdown();
            });
        </script>
    </body>
</html>